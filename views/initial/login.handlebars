<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="card">
      <div class="card-header bg-primary bg-opacity-25">
        <h3>Acesso</h3>
      </div>
      <div class="card-body">
        <form action="/login" method="post">
          <div class="mb-3">
            <label for="initLogin" class="form-label">Login</label>
            <input class="form-control" id="initLogin" autocomplete="username" name="login" required>
          </div>
          <div class="mb-3">
            <label for="initPass" class="form-label">Senha</label>
            <input type="password" class="form-control" id="initPass" autocomplete="current-password" name="password" required>
          </div>
          <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
      </div>
      <div class="card-footer bg-primary bg-opacity-25">
        <div class="d-flex justify-content-center gap-1">
          <p>NÃ£o tem uma conta?</p>
          <a href="/create-login">Criar conta</a>
        </div>
        <div class="d-flex justify-content-center">
          <a href="/forgot-password">Esqueci minha senha</a>
        </div>
      </div>
    </div>
  </div>
</div>  