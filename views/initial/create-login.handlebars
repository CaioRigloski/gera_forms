{{> header}}

<div class="container mt-5">
  <div class="d-flex justify-content-center">
    <div class="card">
      <div class="card-header bg-secondary bg-opacity-25">
        <h3>Criar Conta</h3>
      </div>
      <div class="card-body">
        <form action="/create-login" method="post">
          <div class="mb-3">
            <label for="createLogin" class="form-label">Login</label>
            <input class="form-control" id="createLogin" autocomplete="username" name="login" required>
          </div>
          <div class="mb-3">
            <label for="createPass" class="form-label">Senha</label>
            <input type="password" class="form-control" id="createPass" autocomplete="current-password" name="password" required>
          </div>
          <button type="submit" class="btn btn-secondary">Cadastrar</button>
        </form>
      </div>
      <div class="card-footer bg-secondary bg-opacity-25">
        <div class="d-flex justify-content-center gap-1">
          <p>JÃ¡ tem uma conta?</p>
          <a href="/login">Acessar</a>
        </div>
      </div>
    </div>
  </div>
</div>  